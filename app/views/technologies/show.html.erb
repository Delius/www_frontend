<h1><%= @technology.name %></h1>
<% if user_signed_in? %>
<p><%= link_to 'Edit Technology', edit_technology_path(@technology) %></p>
<% end %>

<div class="panel panel-default">
	<div class="panel-heading"><h3>Description </h3></div>

	<div class="panel-body">
		<div class="panel panel-primary">
			<p><p><%= @technology.description %></p>
		</div>
	</div>
</div>

<% if @technology.examples.size > 0 %>
	<table>
		<tbody>
			<tr>
				<th>Example</th>
				
			</tr>
			<%= render partial: "examples/example", collection: @technology.examples %>
		</tbody>
	</table>
<% else %>
	<p>No examples yet</p>
<% end %>

<% content_for :aside do %>
	<%= render 'sidebar' %>
<% end %>